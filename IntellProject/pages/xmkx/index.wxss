/* pages/xmkx/index.wxss */
.scrollview{height: 400px;}
.search_box{height: 40px;display: flex;border-bottom: 1px solid #ddd;background: white;
    top: 0;left: 0;width: 100%;z-index: 11;}
.search_box.position1{position: fixed;}
.search_item{ height: 40px;line-height: 40px;text-align: center;flex: 1;font-size: 14px;}
.item_img{width: 16px;height: 16px;display: inline-block;position: relative;top: 4px;}
.br{border-right: 1px solid #ddd;}
.search_info{position: fixed;width: 100%;top: 41px;bottom: 0;z-index: 111}
.search_info_back{position: absolute;width: 100%;height: 100%;left: 0;top: 0;background: rgba(51,51,51,0.5);}
.search_info_box{background: white;position: relative;z-index: 11;padding-bottom: 40px;}
.search_info_cnt{padding: 10px 15px;}
.search_title{height: 30px;line-height: 30px;font-size: 13px;color: #666;}
.items:after{clear: both;content: '';display: block;}
.item{float: left;height: 26px;background: #eee;border-radius: 13px;text-align: center;box-sizing: border-box;
    padding: 0 13px;min-width: 80px;font-size: 12px;line-height: 26px;margin-right: 10px;margin-bottom: 10px;color: #666;}
.item.active{color: #3e9fed;background: rgba(62,159,237,0.2);}
.search_button{position: absolute;width: 100%;height: 40px;display: flex;border-top: 1px solid #ddd;}
.search_button_item{height: 40px;line-height: 40px;text-align: center;flex: 1;font-size: 14px;}
.color_active{color: #3e9fed;}

.kx_list_item{width: 730rpx;margin: 5px auto;background: white;padding: 0 20rpx;box-sizing: border-box;}
.list_item_title{height: 30px;position: relative;padding-right: 6px;overflow: hidden;
    color: #3e9fed;white-space: nowrap;text-overflow: ellipsis;}
.list_item_title_text{color: #3e9fed;line-height: 30px; font-size: 14px;}
.list_title_right{position: absolute;right: 0;top: 0;height: 30px;line-height: 30px;font-size: 16px;color: #3e9fed;}
.list_item_content{height: 70px;padding: 5px 0;flex-direction:row;display: flex;}
.list_item_content_item1{height: 100%;flex: 2;overflow: hidden;}
.list_item_content_item1 image{width: 100%;height: 100%;}
.list_item_content_item2{height: 100%;flex: 3;overflow: hidden;line-height: 15px;text-overflow: ellipsis;
    display: -webkit-box;word-break: break-all;-webkit-box-orient: vertical;padding-left: 5px;
    -webkit-line-clamp: 4;text-align: left;text-indent: 0; }
.list_item_content_item2 text{font-size: 12px;}
.list_item_intro{padding: 5px 0;}
.list_item_intro_item{min-height: 20px;font-size: 12px;color: #666;padding-left: 70px;position: relative;}
.list_item_intro_item_key{width: 60px;height: 18px;line-height: 18px;position: absolute;
    left: 0;top: 50%;margin-top: -9px;}
.list_item_intro_item_value{padding: 2px 0;line-height: 16px;}
.list_item_auth{height: 35px;line-height: 35px;flex-direction:row;display: flex;font-size: 12px;color: #666;}
.list_item_auth_item{flex: 1;}