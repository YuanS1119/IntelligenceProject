page{background: white;}
.tip{height: 15px;line-height: 15px;font-size: 12px;padding-left: 20px;color: #999;padding-top: 10px;}
.title{padding: 10px 10px;font-size: 20px;text-align: center;font-weight: 600;}
.content{padding: 0 15px;font-size: 14px;line-height: 20px;margin: 5px auto;}


.images{padding: 40rpx 25rpx 0;background: white;}
.images:after{content: '';display: block;clear: both;}
.image_item{float: left;margin-right: 40rpx;width: 145rpx;height: 145rpx;box-sizing: border-box;margin-bottom: 40rpx;position: relative;}
.image_item:nth-of-type(4n){margin-right: 0;}
.image_item_img{display: block;max-width: 100%;max-height: 100%;}

.image_detail{position: fixed;width: 100%;height: 0;left: 0;top: 100%;z-index: 11;
    background: rgba(33,33,33,0.8);
    align-items: center;/** 垂直居中*/
    display: flex;
    justify-content: center;}
.image_detail_box{
    align-items: center;/** 垂直居中*/
    display: flex;
    justify-content: center;width: 100%;min-height: 100%;
}
.image_detail_info{max-width: 100%;display: block;width: 100%;height: auto;}
