page{background: #ededed;}
.title{padding: 10px 0 5px 16px;font-size: 14px;}
.info_items{padding-left: 16px;background: white;}
.info_item{height: 45px;line-height: 45px;font-size: 14px;position: relative;border-bottom: 1px solid #ddd;display: flex;}
.info_item:last-of-type{border: none;}
.info_item_key{color: #333;padding-right: 20px;min-width: 60px;}
.info_item_value{color: #999;float: right;margin-right: 10px;overflow: hidden;flex: 1;text-align: right;
    text-overflow: ellipsis;    white-space: nowrap;height: 100%;}
.submit{width: 94%;height: 80rpx;background: #07C160;color: white;line-height: 90rpx;
    font-size: 36rpx;margin-top: 80rpx;margin: 40rpx auto 0;}
.mb5{margin-bottom: 5px;}
.hbt{width: 50%;height: 100%;border: none;background: white;color: #6aa7fc;text-align: center;}
.form_input{height: 100%;text-align: right;}
.wzmc{position: relative;padding-right: 60px;margin-right: 0;}
.delete{width: 50px;height: 100%;float: right;color: white;background: red;border: none;margin-left: 5px;
    text-align: center;font-size: 16px;line-height: 45px;position: absolute;right: 0;top: 0;}

.wls{padding-left: 40px;position: relative;background: white;}
.checkbox_item{zoom: 0.7;position: absolute;width: 16px;height: 16px;top: 50%;margin-top: -8px;left: 12px;}
.cancel{background: white;color: #666;border: none;margin-bottom: 20px;}


.picker_box{position: fixed;left: 0;top: 0;width: 100%;height: 100%;background-color:rgba(0, 0, 0, 0.5);z-index: 11111;}
.picker_cnt{position: absolute;left: 0;top: 50%;height: 50%;width: 100%;background: white;display: flex;flex-direction:column; }
.picker_cnt_head{height: 40px;position: relative;}
.picker_btn{background: none;border: none;font-size: 14px;height: 20px;line-height: 20px;}
.picker_btn.cancel{float: left;margin-left: 10px;margin-top: 10px;color: #333;}
.picker_btn.sure{float: right;margin-right: 10px;margin-top: 10px;color: #07C160;}
.picker_info{height: 100%;flex: 1;width: 100%;}
.picker_info_item{line-height: 40px;text-align: center;}
.picker_search{height: 26px;position: absolute;left: 60px;right: 60px;top: 7px;border-radius: 2px;
    text-indent: 5px;border: 1px solid #ddd;font-size: 14px;}