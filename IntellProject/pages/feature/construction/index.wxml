<!--index.wxml-->
<view class="container">
    <view class='box'>
        <view class='bac'></view>
        <view class='wx_title'>二维码绑定</view>
        <view class='function_box'>
            <view class='function_item' bindtap='scanCode'>
                <image class='item_img' src='/images/sscan.png' mode="aspectFit"></image>
                <view class="item_cnt">
                    <view class='item_t1'>绑定</view>
                    <view class='item_t2'>将物料与二维码绑定</view>
                </view>
            </view>
        </view>
    </view>
    <view class='box'>
        <view class='bac'></view>
        <view class='wx_title'>安装作业</view>
        <view class='items clearfix'>
            <navigator class="function_item" url='/pages/feature/construction/add' open-type="navigate">
                <image class='item_img' src='/images/report1.png' mode="aspectFit"></image>
                <view class="item_cnt">
                    <view class='item_t1'>施工安装</view>
                    <view class='item_t2'>将施工安装过程中的安装关系记录在系统中</view>
                </view>
            </navigator>
            <navigator class="function_item" url='/pages/feature/construction/wait_list' open-type="navigate">
                <image class='item_img' src='/images/todo1.png' mode="aspectFit"></image>
                <view class="item_cnt">
                    <view class='item_t1'>未提交</view>
                    <view class='item_t2'>打开曾暂时保存的“施工安装”信息，用于正式提交</view>
                </view>
            </navigator>
            <navigator class="function_item" url='/pages/feature/construction/history_list' open-type="navigate">
                <image class='item_img' src='/images/finish1.png' mode="aspectFit"></image>
                <view class="item_cnt">
                    <view class='item_t1'>历史查询</view>
                    <view class='item_t2'>查询自己历史上“施工安装”过的数据</view>
                </view>
            </navigator>
        </view>
    </view>
</view>

