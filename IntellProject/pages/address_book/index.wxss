page{padding-top: 55px;height: 100%;box-sizing: border-box;}
.search_box{height: 55px;padding: 10px 10px;background: white;box-sizing: border-box;
    position: fixed;top: 0;left: 0;z-index: 111;width: 100%;}
.search_box image{width: 20px;height: 20px;position: absolute;left: 20px;top: 50%;margin-top: -8px;}
.search_input{width: 100%;height: 100%;border-radius: 6px;background: #efefef;border: 1px solid #f0f0f0;
    padding-left: 35px;font-size: 14px;box-sizing: border-box;}
.title{height: 30px;line-height: 30px;background: #ededed;
    padding-left: 10px;width: 100%;}
.header{position: fixed;top: 55px;left: 0;z-index: 111;}
.item{height: 45px;line-height: 45px;padding-left: 10px;}
.scrollview{width: 100%;height: 100%;}

.right_box{width: 20px;position: fixed;right: 10px;top: 60px;border-radius: 10px;z-index: 1111;
    bottom: 10px;border: 1px solid #ddd;background: #eee;
    flex-direction: column;display: flex;box-sizing: border-box;padding: 5px 0;}
.right_item{font-size: 12px;text-align: center;flex: 1}
.right_item.active{color: #07C160;}
