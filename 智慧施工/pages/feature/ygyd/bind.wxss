.picker_box{position: fixed;left: 0;top: 0;width: 100%;height: 100%;background-color:rgba(0, 0, 0, 0.5);z-index: 11111;}
.picker_cnt{position: absolute;left: 0;top: 50%;height: 50%;width: 100%;background: white;display: flex;flex-direction:column; }
.picker_cnt_head{height: 40px;position: relative;}
.picker_btn{background: none;border: none;font-size: 14px;height: 20px;line-height: 20px;}
.picker_btn.cancel{float: left;margin-left: 10px;margin-top: 10px;color: #333;}
.picker_btn.sure{float: right;margin-right: 10px;margin-top: 10px;color: #07C160;}
.picker_info{height: 100%;flex: 1;width: 100%;}
.picker_info_item{line-height: 40px;text-align: center;}
.picker_search{height: 26px;position: absolute;left: 60px;right: 60px;top: 7px;border-radius: 2px;
    text-indent: 5px;border: 1px solid #ddd;font-size: 14px;}