.items {
    background: white;
}

.item {
    justify-content: center;
    height: 250rpx;
    box-sizing: border-box;
    padding: 55rpx 0;
    border-right: 1px solid #eee;
    border-bottom: 1px solid #eee
}

.item:nth-of-type(3n) {
    border-right: 0;
}

.item_img {
    width: 78rpx;
    height: 78rpx;
    margin: 0 auto 20rpx;
    display: block;
}

.alert {
    display: block;
    width: 20px;
    height: 20px;
    position: relative;
    margin-right: 5px;
}

.item_txt{line-height: 40rpx;text-align: center;font-size: 13px;}