page{
    background-color: #fff;
}
.title{
    font-size: 14px;
    color: #858585;
    height: 40px;
    line-height: 40px;
    padding-left: 15px;
    background-color: #ccc;
}
.safeProblom{
    padding-left:15px;
    box-sizing: border-box;
}
.step{ 
    padding-right: 15px;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    font-size: 17px;
    height: 50px;
    line-height: 50px;
    border-bottom:1px solid #ccc;
}
.step:nth-child(10){
    border-bottom:none; 
}
.pub{
    color: #858585;
}
.tip{
    background-color: #e8e8e8;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.tip_text{
    margin: 10px 0;
    padding-left: 15px;
    box-sizing: border-box;
    font-size: 12px;
    color: #aeaeae;
}
.tip_tip{
    margin: 0 0 10px 0;
    padding-left: 15px;
    box-sizing: border-box;
    font-size: 12px;
    color: #828282;
}